@model Reservation

@{ ViewBag.Title = "Home"; }

<script type="text/javascript">
    function Alert() {
        var checkin = document.getElementById("CheckInDate");
        var checkout = document.getElementById("CheckOutDate");
        if (checkout.value < checkin.value) {
            alert("Checkout date should be equal or greater than checkin date");
        }
    }
</script>

<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<style>
    
    div {
        padding: 10px 5px 10px 5px;
    }

    body {
        background-image: url('https://ir-prod-us-standard-pms-roomclass-images.s3.amazonaws.com/889%2F1574870177_5.jpg');
        background-repeat: no-repeat;
        background-attachment : fixed;
        background-size: 100% 100%
    }

    /*        button {
            margin: 10px 5px 0px;
            padding-top: 10px;
            padding-bottom: 10px;
            border-radius: 2px;
        }*/



    span {
        font-style: inherit;
        font-weight: bold
    }
</style>
<div class="container">
    <div class="row">
        <div class="col align-self-center">
            <h6 class="text-center">Welcome! Please select your dates below</h6>
            <div>
                <form asp-action="Index" asp-controller="Home" method="post" style="background-color: #ffffff">
                    <div class="row form-group">
                        <div class="col">
                            <label asp-for="CheckInDate">Check In</label>
                            <input type="date" id="CheckInDate" asp-for="CheckInDate" class="form-control" />
                            <span asp-validation-for="CheckInDate" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="CheckOutDate">Check out</label>
                            <input type="date" id="CheckOutDate" asp-for="CheckOutDate" class="form-control" />
                            <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group" style="color:black">
                        <label asp-for="NoOfAdults" class="control-label"></label>
                        <input type="number" asp-for="NoOfAdults" class="form-control" />
                        <span asp-validation-for="NoOfAdults" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</html>